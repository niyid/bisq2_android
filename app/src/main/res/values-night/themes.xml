<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bisq2Mobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_charcoal_3</item>
        <item name="colorPrimaryVariant">@color/grey_charcoal</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey_charcoal_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Bisq2Mobile.Fullscreen" parent="Theme.Bisq2Mobile">
        <item name="android:actionBarStyle">@style/Widget.Theme.Bisq2Mobile.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.Bisq2Mobile.FullscreenContainer" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="fullscreenBackgroundColor">@color/grey_charcoal_3</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>
</resources>